<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="de.tum.androidcontroller.MainActivity"
    tools:showIn="@layout/activity_main"
    android:orientation="vertical"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fadingEdge="none"
        android:fadingEdgeLength="0dp"
        android:fillViewport="true"
        android:overScrollMode="never"> <!-- disables the stupid effect on the bottom and on top -->

        <!-- Parent linear layout-->
       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:id="@+id/main_fragment_parent_linear_layout">

           <!-- Linear layout at level 1-->
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:paddingTop="@dimen/fragment_main_default_elements_padding"
               >
               <!-- Linear layout inside (level 2) -->
               <include layout="@layout/fragment_sensor_data"
                   android:id="@+id/content_main_accelerometer"/>
               <!-- Linear layout inside (level 2) -->
               <include layout="@layout/fragment_sensor_data"
                   android:id="@+id/content_main_gyro"/>

           </LinearLayout>

           <!-- Linear layout at level 1-->
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:paddingTop="@dimen/fragment_main_default_elements_padding">

               <!-- Linear layout inside (level 2) -->
               <include layout="@layout/fragment_sensor_data"
                   android:id="@+id/content_main_linear_accelerometer"/>
               <!-- Linear layout inside (level 2) -->
               <include layout="@layout/fragment_sensor_data"
                   android:id="@+id/content_main_magnetic_field"/>

           </LinearLayout>

           <!-- Linear layout at level 1-->
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:paddingTop="@dimen/fragment_main_default_elements_padding"
               android:paddingBottom="@dimen/fragment_main_default_elements_padding">

               <!-- Linear layout inside (level 2) -->
               <include layout="@layout/fragment_sensor_data"
                   android:id="@+id/content_main_rotation_vector"
                   />

               <Button
                   android:layout_width="wrap_content"
                   android:paddingTop="@dimen/fragment_main_default_elements_padding"
                   android:layout_height="match_parent"
                   android:text="@string/main_content_reset_button"
                   android:textAllCaps="false"
                   android:textSize="@dimen/global_normal_text_size"
                   android:onClick="resetMaxMinValues"/>
           </LinearLayout>

       </LinearLayout>

    </ScrollView>


</LinearLayout>
