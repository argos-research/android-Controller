<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="de.tum.androidcontroller.MainActivity"
    tools:showIn="@layout/activity_main"
    android:orientation="vertical"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Accelerometer"
        android:textSize="@dimen/global_headline_text_size"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/fragment_main_default_elements_padding">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="X: "
            android:textSize="@dimen/global_normal_text_size"
            android:layout_weight="0"/>
        <TextView
            android:layout_width="@dimen/fragment_main_value_default_width"
            android:layout_height="wrap_content"
            android:id="@+id/accelerometer_value_x"
            android:textSize="@dimen/global_normal_text_size"
            android:layout_weight="1"/>

        <Space
            android:layout_width="@dimen/fragment_main_default_space_separator"
            android:layout_height="match_parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Y: "
            android:textSize="@dimen/global_normal_text_size"
            android:layout_weight="0"/>
        <TextView
            android:layout_width="@dimen/fragment_main_value_default_width"
            android:layout_height="wrap_content"
            android:id="@+id/accelerometer_value_y"
            android:textSize="@dimen/global_normal_text_size"
            android:layout_weight="1"/>

        <Space
            android:layout_width="@dimen/fragment_main_default_space_separator"
            android:layout_height="match_parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Z: "
            android:textSize="@dimen/global_normal_text_size"
            android:layout_weight="0"/>
        <TextView
            android:layout_width="@dimen/fragment_main_value_default_width"
            android:layout_height="wrap_content"
            android:id="@+id/accelerometer_value_z"
            android:textSize="@dimen/global_normal_text_size"
            android:layout_weight="1"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Gyro"
        android:textSize="@dimen/global_headline_text_size"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/fragment_main_default_elements_padding">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="X: "
            android:textSize="@dimen/global_normal_text_size"
            android:layout_weight="0"/>
        <TextView
            android:layout_width="@dimen/fragment_main_value_default_width"
            android:layout_height="wrap_content"
            android:id="@+id/gyro_value_x"
            android:textSize="@dimen/global_normal_text_size"
            android:layout_weight="1"/>

        <Space
            android:layout_width="@dimen/fragment_main_default_space_separator"
            android:layout_height="match_parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Y: "
            android:textSize="@dimen/global_normal_text_size"
            android:layout_weight="0"/>
        <TextView
            android:layout_width="@dimen/fragment_main_value_default_width"
            android:layout_height="wrap_content"
            android:id="@+id/gyro_value_y"
            android:textSize="@dimen/global_normal_text_size"
            android:layout_weight="1"/>

        <Space
            android:layout_width="@dimen/fragment_main_default_space_separator"
            android:layout_height="match_parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Z: "
            android:textSize="@dimen/global_normal_text_size"
            android:layout_weight="0"/>
        <TextView
            android:layout_width="@dimen/fragment_main_value_default_width"
            android:layout_height="wrap_content"
            android:id="@+id/gyro_value_z"
            android:textSize="@dimen/global_normal_text_size"
            android:layout_weight="1"/>

    </LinearLayout>

</LinearLayout>
