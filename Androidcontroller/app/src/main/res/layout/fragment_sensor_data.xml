<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/fragmet_sensor_data_type_sensor"
        android:text="Sensor"
        android:textSize="@dimen/global_headline_text_size"
        android:gravity="center_horizontal"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="30dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="X: "
            android:textSize="@dimen/global_normal_text_size"
            android:layout_weight="0"/>
        <TextView
            android:layout_width="@dimen/fragment_main_value_default_width"
            android:layout_height="wrap_content"
            android:id="@+id/value_x"
            android:textSize="@dimen/global_normal_text_size"
            android:layout_weight="1"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Y: "
            android:textSize="@dimen/global_normal_text_size"
            android:layout_weight="0"/>
        <TextView
            android:layout_width="@dimen/fragment_main_value_default_width"
            android:layout_height="wrap_content"
            android:id="@+id/value_y"
            android:textSize="@dimen/global_normal_text_size"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Z: "
            android:textSize="@dimen/global_normal_text_size"
            android:layout_weight="0"/>
        <TextView
            android:layout_width="@dimen/fragment_main_value_default_width"
            android:layout_height="wrap_content"
            android:id="@+id/value_z"
            android:textSize="@dimen/global_normal_text_size"
            android:layout_weight="1"/>

    </LinearLayout>

</LinearLayout>